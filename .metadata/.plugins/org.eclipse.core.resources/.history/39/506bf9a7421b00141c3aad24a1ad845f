public void UpdateCoordinates() {
    Void params = null;
	new update().execute(params);
}

private class update extends AsyncTask<Void, Void, double[]> {
	
	
	 final TextView text =  (TextView) findViewById(R.id.display);
	
    /** The system calls this to perform work in a worker thread and
      * delivers it the parameters given to AsyncTask.execute() */
    protected double []  doInBackground(Void... params) {
    	Updater u = new Updater();
        return u.getCoords();
    }
    
    /** The system calls this to perform work in the UI thread and delivers
      * the result from doInBackground() */
    protected void onPostExecute(double[] d) {
        text.setText(""+d[0]+" "+d[1]);
    }
    class Updater extends Activity{
    	 GpsClass gps = new GpsClass(this);
    	
    	 double[] getCoords(){
    		 double cods []={gps.getCoordinates(1),gps.getCoordinates(0)};
			return cods;
    		 
    	 }
    		 
		
	}

	
}
	   
}